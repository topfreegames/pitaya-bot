{
  "numberOfInstances": 1,
  "preRun": {
    "function": "redis",
    "args": {
      "name": "test"
    }
  },
  "sequentialOperations": [
    {
      "type": "request",
      "uri": "connector.playerHandler.create",
      "expect": {
        "$response.code": {
          "type": "string",
          "value": "200"
        } 
      },
      "store": {
        "playerAccessToken": {
          "type": "string",
          "value": "$response.player.accessToken"
        }
      }
    },
    {
      "type": "function",
      "uri": "reconnect"
    },
    {
      "type": "request",
      "uri": "connector.playerHandler.authenticate",
      "args": {
        "accessToken": {
          "type": "string",
          "value": "$store.playerAccessToken"
        }
      },
      "expect": {
        "$response.code": {
          "type": "string",
          "value": "200" 
        },
        "$response.player.accessToken": {
          "type": "string",
          "value": "$store.playerAccessToken"
        }
      }
    }, 
    {
      "type": "request",
      "uri": "connector.playerHandler.findmatch",
      "args": {
        "roomType": {
          "type": "string",
          "value": "default"
        }
      }, 
      "expect": {
        "$response.code": {
          "type": "string",
          "value": "200"
        }
      }
    },
    {
      "type": "listen",
      "uri": "connector.playerHandler.matchfound",
      "timeout": 1000,
      "expect": {
        "$response.code": {
          "type": "string",
          "value": "200"
        },
        "$response.ip": {
          "type": "string",
          "value": "127.0.0.1"
        },
        "$response.port": {
          "type": "int",
          "value": 9090
        }
      }
    }
  ],
  "postRun": {
    "function": "saveToFile"
  }
}
